<section id="container" class="sidebar-closed container" >
  <!-- Header -->
    <% @message = 'Crear usuario' %>
    <%= render 'shared/header'%>
  <!-- End header -->
  <div id="main-content" class="wrapper">
    <div class="col-md-12">
      <div class="content-panel">
        <h4><i class="fa fa-angle-right"></i> Usuarios </h4><hr>
        <table class="table table-striped table-advance table-hover">
          <thead>
            <tr>
              <th><i class="fa fa-bullhorn"></i> Identificaci√≥n </th>
              <th class="hidden-phone"><i class="fa fa-question-circle"></i> Nombre </th>
              <th><i class="fa fa-bookmark"></i> Telefono </th>
              <th><i class=" fa fa-edit"></i> Correo </th>
              <th><i class=" fa fa-edit"></i> Tipo de usuario </th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td class="hidden-phone"><%= user.customer_id %></td>
                <td class="hidden-phone"><%= user.full_name %></td>
                <td><%= user.phone %> </td>
                <td><%= user.email %></td>
                <% case user.rank %>
                  <% when 'sa' %>
                    <td><span class="label label-info label-mini">Super usuario</span></td>  
                  <% when 'administrador' %>
                    <td><span class="label label-warning label-mini">Administrador</span></td>
                  <% else %>
                    <td><span class="label label-success label-mini">Usuario</span></td>
                <% end %>
                <td>
                  <% unless user.is_sa? %>
                    <a href= <%= edit_user_path(user)%> > <button class="btn btn-primary btn-xs md-trigger"> <i class="fa fa-pencil"></i> 
                    </button></a>
                    <a href=<%= user_path(user) %> data-method="delete"> <button class="btn btn-danger btn-xs "><i class="fa fa-trash-o ">
                    </i></button></a>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>    
</section>