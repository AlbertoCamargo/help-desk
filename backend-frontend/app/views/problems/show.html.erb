<h1>Problems#show</h1>
<p><%= @problem.title %></p>
<p><%= @problem.description %></p>
<p><%= @problem.user.full_name %></p>


<table>
  <tbody>
    <% @comments_problems.each do |comments_problem| %>
      <% if current_user.creator_comments?(comments_problem.id, 'problem') %>
        <!--  AUTHOR -->
        <tr>
          <td><%= link_to comments_problem.description, comments_problem_path(comments_problem.id) %></td>
          <td><%= comments_problem.user.full_name %></td>
          <td><%= link_to 'Editar', edit_comments_problem_path(comments_problem) %></td>
          <td><%= link_to 'Eliminar', comments_problem_path(comments_problem, problem_id: @problem.id), method: :delete %></td>
        </tr>
      <% else %>
        <!--  NO AUTHOR -->
        <tr>
          <td><%= link_to comments_problem.description, comments_problem_path(comments_problem.id) %></td>
          <td><%= comments_problem.user.full_name %></td>
          <td><%= link_to 'Editar', edit_comments_problem_path(comments_problem) %></td>
          <td><%= link_to 'Eliminar', comments_problem_path(comments_problem, problem_id: @problem.id), method: :delete %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


<%= form_for @comments_problem do |f| %>
  <label>Description</label><br>
  <%= f.text_area :description %><br>
  <% unless @comments_problem.errors[:description].blank? %>
    <span><%= @comments_problem.errors[:description].join(', ') %></span>
  <% end %>
  <%= f.hidden_field :problem_id, value: @problem.id %>
  <%= f.submit 'Crear comentario a problema' %>
<% end %>

<p><%= link_to 'back', :home %><p>

