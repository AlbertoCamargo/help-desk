<!DOCTYPE html>
<html>
  <head>
    <title>Help Desk</title>
    <%= stylesheet_link_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="cont">
      <div class="demo">
        <div class="login">
          <div class="login__check"></div>
          <%= form_tag :sessions, method: :post, remote: true, autocomplete: 'off' do %>
            <div class="login__form">
              <div class="login__row">
                <svg class="login__icon name svg-icon" viewBox="0 0 20 20">
                  <path d="M0,20 a10,8 0 0,1 20,0z M10,0 a4,4 0 0,1 0,8 a4,4 0 0,1 0,-8" />
                </svg>
                <%= text_field_tag :customer_id, nil, placeholder: 'Identification', class: 'login__input name' %>
              </div>
              <div class="login__row">
                <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
                  <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0" />
                </svg>
                <%= password_field_tag :password, nil, placeholder: 'Password', class: 'login__input pass' %>
              </div>
              <button class='login__submit'> Login</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
